<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:orientation="vertical"
              android:layout_weight="10"
              android:layout_height="wrap_content"
              style="@style/nowCardStyle"
              tools:context=".CollectionListActivity">
    <TextView
        android:id="@+id/row_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:padding="5dp"
    />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/row_normal"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="8dp"
        android:visibility="gone">
        <TextView  
            android:id="@+id/row_rest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/white"
        />
        <TextView  
            android:id="@+id/row_gft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="3dp"
            android:textColor="@android:color/white"
        />
        <TextView  
            android:id="@+id/row_pmd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="3dp"
            android:textColor="@android:color/white"
        />
        <TextView  
            android:id="@+id/row_pk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="3dp"
            android:textColor="@android:color/white"
        />
        <TextView  
            android:id="@+id/row_glas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="3dp"
            android:textColor="@android:color/white"
        />
    </LinearLayout>
    
    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_extras"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:background="@color/extras"
        android:visibility="gone"
    />
</LinearLayout>